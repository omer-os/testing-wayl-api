generator client {
  provider = "prisma-client"
  output   = "./generated/prisma"
}

datasource db {
  provider = "postgresql"
}


model User {
  id        String   @id @default(cuid())
  clerkId   String   @unique
  email     String   @unique
  
  plan      Plan     @default(FREE)
  
  waylCustomerId String? 
  
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}


enum Plan {
  FREE
  BASIC
  PRO
  ENTERPRISE
}
