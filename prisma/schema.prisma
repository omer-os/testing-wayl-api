generator client {
  provider = "prisma-client"
  output   = "./generated/prisma"
}

datasource db {
  provider = "postgresql"
}

model User {
  id       String   @id @default(cuid())
  email    String   @unique
  password String
  role     UserRole @default(USER)
  name     String

  plan           Plan    @default(FREE)
  waylCustomerId String?

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

enum Plan {
  FREE
  BASIC
  PRO
  ENTERPRISE
}

enum UserRole {
  ADMIN
  USER
}